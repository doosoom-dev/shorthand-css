{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".npm/dist", 
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
